[
  {
    "clean": ["~"]
  },
  {
    "link": {
      "~/.dotfiles": "",
      "~/.hushlogin": "hushlogin",
      "~/.zplug": "zplug/",
       "~/.zshrc": "zshrc",
      "~/.zsh": "zsh/",
      "~/.tmux.conf": "tmux.conf",
      "~/.vim": "vim/",
      "~/.vimrc": "vimrc",
       "~/.screenrc": "screenrc",
       "~/.gitconfig": "gitconfig",
       "~/.gitignore": ".gitignore"
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
